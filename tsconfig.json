	"exclude": ["node_modules/**"],
	"compilerOptions": {
		"sourceMap": true,
		"types": ["jest", "@types/jest-environment-puppeteer"],
	},
	"typedocOptions": {
		"name": "SÃ¸rensen",
		"out": "docs",
